<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.spartanrides.Main2Activity$PlaceholderFragment">
    <ImageView
        android:id="@+id/profilepic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_weight="2"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="centerCrop" />
        <!--android:src="@drawable/spartanlogo" -->


    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/emailid"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="2"
        android:background="#FFC107"
        android:text="NAME:"
        android:textColor="#0D47A1"
        android:textColorHighlight="#64B5F6"
        android:textSize="14sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/emailid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/medallions"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="2"
        android:background="#FFC107"
        android:text="EMAIL_ID:"
        android:textColor="#0D47A1"
        android:textColorHighlight="#64B5F6"
        android:textSize="14sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/medallions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/signoutButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="2"
        android:background="#FFC107"
        android:text="MEDALLIONS:"
        android:textColor="#0D47A1"
        android:textColorHighlight="#64B5F6"
        android:textSize="14sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/signoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="2"
        android:background="#FFC107"
        android:fontFamily="sans-serif"
        android:text="SIGNOUT SPARTAN"
        android:textColor="#0D47A1"
        android:textSize="24sp"
        android:textStyle="bold|italic" />


</RelativeLayout>
