<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.spartanrides.Main2Activity$PlaceholderFragment">


    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/searchPostLogo"
        android:layout_height="match_parent"
        android:src="@drawable/spartanlogo"
        android:scaleType="centerCrop"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchPostText"
        android:text="Post or Search for carpool"
        android:textColor="#000000"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"/>

    <!--Button for Search-->
    <Button
        android:background="@drawable/button_selecter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/search_redirect"
        android:onClick="doSearch"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="300dp"
        android:alpha="0.5"/>


    <!--Button for Post-->
    <Button
        android:background="@drawable/button_selecter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post"
        android:id="@+id/post_redirect"
        android:onClick="doPost"
        android:layout_alignTop="@+id/search_redirect"
        android:layout_below="@+id/search_redirect"
        android:layout_marginTop="50dp"
        android:alpha="0.5"/>

</RelativeLayout>
